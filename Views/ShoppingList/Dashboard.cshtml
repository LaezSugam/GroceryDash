@{
    ViewData["Title"] = "Welcome to Grocery Dash!";
}

@using GroceryDash.Models

<h3>Welcome, @ViewBag.CurrentUserFirstName</h3>

@{
    User user = (User)ViewBag.FullUser;
    @if(@user.MyShoppingLists.Count > 0){
    
        @foreach(var list in user.MyShoppingLists){
            <p>@list.ShoppingList.Name <a asp-controller="ShoppingList" asp-action="ListDetails" asp-route-id="@list.ShoppingList.id"><button>Edit</button></a> <a asp-controller="ShoppingList" asp-action="GoShopping" asp-route-listId="@list.ShoppingList.id"><button>Go Shopping</button></a></p>
        }
    }
}

<a asp-controller="ShoppingList" asp-action="CreateList"><button class="big-button">Build New List</button></a>

<a asp-controller="Product" asp-action="CreateProduct"><button class="big-button">Add New Product</button></a>

<a asp-controller="ProductCategory" asp-action="CreateProductCategory"><button class="big-button">Add New Product Category</button></a>

<a asp-controller="Store" asp-action="CreateStore"><button class="big-button">Add New Store</button></a>

<a asp-controller="Store" asp-action="Stores"><button class="big-button">View All Stores</button></a>