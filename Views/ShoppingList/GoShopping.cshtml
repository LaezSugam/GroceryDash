@{
    ViewData["Title"] = "Let's Go Shopping";
}

@using GroceryDash.Models

@if(@ViewBag.ShoppingList != null){
    <h3>@ViewBag.ShoppingList.Name</h3>

    <form asp-controller="ShoppingList" asp-action="GoShopping" asp-route-listId="@ViewBag.ShoppingList.id" method="POST">
        <select name="storeId">
            @if(@ViewBag.Stores != null){
                @foreach(Store store in @ViewBag.Stores){
                    <option value="@store.id">@store.Name</option>
                }
            }
        </select>

        <input type="submit" value="Choose Store">
    </form>
}

<a asp-controller="Store" asp-action="CreateStore"><button class="big-button">Add New Store</button></a>

<a asp-controller="ShoppingList" asp-action="Dashboard"><button class="big-button">Back To Dashboard</button></a>