@{
    ViewData["Title"] = "Create New Product";
}

@using GroceryDash.Models

@model GroceryDash.Models.CreateProductView

    <form asp-controller="Product" asp-action="CreateProduct" method="POST">
    
        <p><span asp-validation-for="CategoryId"></span>
        <label asp-for="CategoryId"></label>
        <select class="multi-selector" asp-for="CategoryId" multiple>
            @if(@ViewBag.Categories != null){
                @foreach(ProductCategory category in ViewBag.Categories){
                    <option value="@category.id">@category.Name</option>
                }
            }
            <option>

            </option>
        </select>
        </p>
        
        <p><span asp-validation-for="Name"></span>
        <label asp-for="Name"></label>
        <input asp-for="Name"></p>

        <p><span asp-validation-for="Description"></span>
        <label asp-for="Description"></label>
        <textarea asp-for="Description"></textarea></p>

        
        <button type="submit" class="big-button">Create Product</button>
    
    </form>

<a asp-controller="ShoppingList" asp-action="Dashboard"><button class="big-button">Back To Dashboard</button></a>